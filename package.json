{
  "name": "clawdachi",
  "version": "1.0.0",
  "description": "A pixel art desktop companion for Claude Code",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json -w",
    "dev:electron": "sleep 2 && NODE_ENV=development electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "pixijs",
    "claude",
    "desktop-pet",
    "companion"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.6.0",
    "electron-store": "^8.2.0",
    "howler": "^2.2.4",
    "pixi.js": "^8.6.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.10",
    "concurrently": "^9.1.2",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.11"
  }
}
